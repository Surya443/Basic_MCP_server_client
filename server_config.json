{
    "mcpServers": {
        
        "filesystem": {
            "command": "npx",
            "args": [
                "-y",
                "@modelcontextprotocol/server-filesystem",
                "."
            ]
        },
        
        "research": {
            "command": "uv",
            "args": ["run", "arxiv_server.py"]
        },

        "brave": {
            "command": "uv",
            "args": ["run", "brave_server.py"]
        },
        
        "fetch": {
            "command": "uvx",
            "args": ["mcp-server-fetch"]
        }
    }
}